#include <stdio.h>

int main()
{
    for(int i=1;i<=4;i++)
    {
        for(int j=1;j<=i;j++)
        {
            printf("* ");
        }
        for(int k=3;k>=i;k--){
            printf("  ");
        }
        for(int l=3;l>=i;l--)
        {
            printf("  ");
        }
        for(int m=1;m<=i;m++)
        {
            printf("* ");
        }
            printf("\n");
    }
    for(int i=1;i<=3;i++)
    {
        for(int j=3;j>=i;j--)
        {
            printf("* ");
        }
        for(int k=1;k<=i;k++){
            printf("  ");
        }
        for(int l=1;l<=i;l++)
        {
            printf("  ");
        }
        for(int m=3;m>=i;m--)
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
