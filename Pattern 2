    A
   BBB
  CCCCC
 DDDDDDD
EEEEEEEEE

#include <stdio.h> 
int main() 
{ 
    for(int i=0;i<=4;i++)
    {
        for(int j=4;j>i;j--)
    {
        printf(" ");
    }
    for(int k=0;k<=i;k++){
        if(i==0){
            printf("A");
        }
        else if(i==1){
            printf("B");
        }
        else if(i==2){
            printf("C");
        }
        else if(i==3){
            printf("D");
        }
        else{
            printf("E");
        }
    }
    for(int l=1;l<=i;l++){
        if(i==0){
            printf("A");
        }
        else if(i==1){
            printf("B");
        }
        else if(i==2){
            printf("C");
        }
        else if(i==3){
            printf("D");
        }
        else{
            printf("E");
        }
    }
        printf("\n");
    }
    
    return 0; 
}
