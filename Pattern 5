 1 2 3 4 
  2 3 4 
   3 4 
    4
   3 4 
  2 3 4 
 1 2 3 4


#include <stdio.h>

int main()
{
    for(int i=1;i<=4;i++)
    {
        for(int j=1;j<=i;j++)
        {
            printf(" ");
        }
        for(int k=i;k<=4;k++)
        {
            printf("%d ",k);
        }
            printf("\n");
    }
    for(int i=3;i>=1;i--)
    {
        for(int j=1;j<=i;j++)
        {
            printf(" ");
        }
        for(int k=i;k<=4;k++)
        {
            printf("%d ",k);
        }
        printf("\n");
    }

    return 0;
}
